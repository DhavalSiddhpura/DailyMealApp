<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:backgroundTint="#F6F3B1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

                <ImageView
                    android:id="@+id/imgMeal"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_person_24" />

                <TextView
                    android:id="@+id/tvMealName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gujarati Thali"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/menu_name"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/tvMealDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C2F64"
                    android:drawableLeft="@drawable/menu_description"
                    android:text="2 Chapati, Rice, Dal, Mixed Veg, Salad, Chhas"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:id="@+id/tvMealTypeDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/time"
                    android:textColor="@android:color/holo_red_dark"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/tvMealPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/currency"
                    android:textColor="@android:color/holo_green_dark"
                    android:paddingTop="4dp"/>

                <RadioButton
                    android:id="@+id/radioSelectMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Gujarati Thali"
                    android:textColor="@color/black"
                    android:paddingTop="8dp"/>

        </LinearLayout>
</androidx.cardview.widget.CardView>
